{
    "name": "Inventory Source Scraper",
    "version": "1.0.0",
    "description": "This chrome extension works to scrape product from app.inventorysource.com",
    "manifest_version": 2,
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "browser_action": {
        "default_icon": "images/icon-48.png",
        "default_title": "Inventory Source Scraper"
    },
    "background": {
        "scripts": [
            "vendors/jquery/jquery.min.js",
            "js/config.js",
            "js/global.js",
            "js/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
              "https://app.inventorysource.com/*",
              "http://app.inventorysource.com/*"
            ],
            "js": [
              "vendors/jquery/jquery.min.js",
              "js/inventorysource.js",
              "js/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage",
        "activeTab"
    ]
}
  